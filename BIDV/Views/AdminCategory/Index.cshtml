                        @{
                            <tr style="background: #f4f4f4;">
                                <td colspan="3">
                                    <h4 id="loaithe">LOẠI THẺ</h4>
                                </td>
                            </tr>
                            var lstCatCardParent = Model.Where(g => g.type == (int)Config.TypeCategory.LoaiThe && g.parent_id == 0).OrderBy(n => n.weight).ToList();
                            foreach (var bidvCategory in lstCatCardParent)
                            {
                                var lstChild = Model.Where(g => g.parent_id == bidvCategory.id && g.status == 1).OrderBy(g => g.weight).ToList();
                                <tr style="text-transform: uppercase; font-weight: bold; ">
                                    <td>@bidvCategory.title</td>
                                    <td>
                                        <a href="/AdminCategory/Edit/@bidvCategory.id" class="btn btn-warning btn-bordered" title="sửa">
                                            <i class="glyphicon glyphicon-pencil"></i>
                                        </a>
                                        <a onclick="confirm.BeforDelete('/AdminCategory/Delete/@bidvCategory.id')" class="btn btn-danger btn-bordered" title="xóa">
                                            <i class="glyphicon glyphicon-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                                if (lstChild.Count > 0)
                                {
                                    foreach (var child in lstChild)
                                    {
                                        <tr>
                                            <td>--- @child.title</td>
                                            <td>
                                                <a href="/AdminCategory/Edit/@child.id" class="btn btn-warning btn-bordered" title="sửa">
                                                    <i class="glyphicon glyphicon-pencil"></i>
                                                </a>
                                                <a onclick="confirm.BeforDelete('/AdminCategory/Delete/@child.id')" class="btn btn-danger btn-bordered" title="xóa">
