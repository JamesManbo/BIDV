@{
    ViewBag.Title = "Quản lý danh mục";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using BIDV
@model List<BIDV.Model.bidv__category>

<div class="row">
    <div class="col-md-12">
        <div class="box box-danger">
            <div class="box-header with-border">
                <h3 class="box-title">Tìm kiếm</h3>
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-xs-3">
                        <select class="form-control" id="seclect-to-div">
                            <option value="">--Di chuyển tới--</option>
                            <option value="loaithe">Loại thẻ</option>
                            <option value="tintuc">Tin tức</option>
                            <option value="uudai">Ưu đãi</option>
                            <option value="tinkhuyenmai">Tin khuyến mại</option>
                            <option value="cauhoithuonggap">Câu hỏi thường gặp</option>
                        </select>
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
        </div>
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Danh mục</h3>
                <a href="/AdminCategory/Add" class="btn btn-primary pull-right">Thêm mới</a>
            </div>
            <!-- /.box-header -->
            <div class="box-body no-padding">
                <table class="table">
                    <thead>
                        <tr style="background: #000; color: #fff;">
                            <th>Tiêu đề</th>
                            <th style="width: 150px;"></th>
                        </tr>
                    </thead>
