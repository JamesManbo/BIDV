@{
    Layout = null;
}
@using BIDV.Common
@model IEnumerable<BIDV.Model.bidv__gallery>
<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Danh sách ảnh | <span style="color: blue;">@TempData["CatName"]</span></h3>
    </div>
    <div class="box-body">
        <div class="gallery" id="gallery">
            <ul>
                @foreach (var item in Model)
                {
                    <li>
                        <img src="/Content/FrontEnd/_img_server/gallery/@HelperDateTime.DateTimeToyyyymmdd(item.created)/size150/@item.image" />
                        <div class="action">
                            <a onclick="gallery.onloaddetail(@item.id)" title="Xem">
                                <i class="fa fa-eye"></i>
                            </a>
                            <a onclick="gallery.onloadformedit(@item.id)" title="Sửa">
                                <i class="fa fa-pencil"></i>
                            </a>
                            <a onclick="gallery.ondelete(@item.id)" title="Xóa">
                                <i class="fa fa-close"></i>
                            </a>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
<style>
    .gallery ul {
        list-style: none;
    }

        .gallery ul li {
            float: left;
            margin: 10px;
            padding: 10px;
            border: 1px solid #ccc;
            box-shadow: 0px 2px 1px #ddd;
            position: relative;
        }

            .gallery ul li:hover {
                background-color: #ddd;
                display: inline-block;
            }

            .gallery ul li img {
                height: 110px;
            }

            .gallery ul li:hover img {
                opacity: 0.2;
            }

            .gallery ul li:hover .action {
                display: block;
            }

    .action {
        position: absolute;
        right: 0;
        top: 10px;
        text-align: center;
        display: none;
        width: 100%;
    }

        .action a {
            float: right;
            width: 100%;
            color: #000;
            padding: 4px;
            cursor: pointer;
            font-size: 20px;
        }
</style>