@{
    ViewBag.Title = "Danh sách người dùng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@using BIDV
@using BIDV.Model
@using PagedList.Mvc
@model PagedList.IPagedList<BIDV.Model.view_UserProfile>
@{
    var lstRoles = (List<webpages_Roles>)ViewBag.Roles;
    var listUserInRoles = (List<view_UserRoles>) ViewBag.ListUserInRoles;
}
<div class="row">
    <div class="col-xs-12">
        <div class="box box-danger">
            <div class="box-header with-border">
                <h3 class="box-title">Tìm kiếm</h3>
            </div>
            <div class="box-body">
                <div class="row">
                    @using (Html.BeginForm("Index", "User", FormMethod.Get))
                    {
                        <div class="col-xs-3">
                            <input type="text" value="@ViewBag.UserName" name="username" class="form-control" placeholder="Tên người dùng">
                        </div>
                        <div class="col-xs-3">
                            <button type="submit" class="btn btn-default">Tìm kiếm</button>
                        </div>
                    }
                </div>
            </div>
            <!-- /.box-body -->
        </div>
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Danh sách người dùng</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div id="example2_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                    <div class="col-sm-12">
                        <table id="example2" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
                            <thead>
                                <tr role="row">
                                    <th>Tên đăng nhập</th>
                                    <th>Ngày tạo</th>
                                    <th>Ngày thay đổi mật khẩu cuối</th>
                                    <th>Thuộc nhóm</th>
                                    <th><a href="/User/Add" class="btn btn-info">Thêm mới</a></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {
                                    var style = "";
                                    if (user.Status == (int)Config.StatusUser.Delete)
                                    {
                                        style = "color: #bfbaba;text-decoration: line-through;";
                                    }
                                    else if (user.Status == (int)Config.StatusUser.Delete)
                                    {
                                        style = "color: red;";
                                    }
                                    <tr role="row" style="@style">
                                        <td>@user.UserName</td>
                                        <td>@string.Format("{0: dd/MM/yyyy HH:mm:ss}", user.CreateDate)</td>
                                        <td>@string.Format("{0: dd/MM/yyyy HH:mm:ss}", user.PasswordChangedDate)</td>
                                        <td>
                                            @{
                                    var _lstRoles = listUserInRoles.Where(g => user.UserId == g.UserId);
                                    <ul>
                                        @foreach (var role in _lstRoles)
                                        {
                                            <li>@role.RoleName</li>
                                        }
                                    </ul>
                                            }
                                        </td>
                                        <td>
                                            <a href="/User/Edit/@user.UserId" class="btn btn-primary btn-bordered" title="Sửa thông tin người dùng">
                                                <i class="glyphicon glyphicon-pencil"></i>
                                            </a>
                                            <a onclick="return confirm.BeforDelete('/User/Delete/@user.UserId')" class="btn btn-danger btn-bordered" title="Xóa người dùng">
                                                <i class="glyphicon glyphicon-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="dataTables_paginate">
                            @if (Model.PageCount > 1)
                            {
                                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
    <!-- /.box -->
</div>
<!-- /.col -->