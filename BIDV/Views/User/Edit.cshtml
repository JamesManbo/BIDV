@{
    ViewBag.Title = "Cập nhật người dùng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@using CKFinder.Connector
@model BIDV.Model.webpages_Membership
<div class="row">
    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Cập nhật người dùng</h3>
            </div>
            @using (Html.BeginForm("Edit", "User", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.HiddenFor(g=>g.UserId)
                <div class="box-body">
                    <div class="form-group">
                        <label for="UserName" class="col-sm-3 control-label">Tên đăng nhập</label>
                        <div class="col-sm-9">
                            <input type="text" readonly="" class="form-control" id="UserName" name="UserName" value="@ViewBag.UserName" placeholder="Tên đăng nhập">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="UserName" class="col-sm-3 control-label">Trạng thái</label>
                        <div class="col-sm-9">
                            <select class="form-control" id="Status" name="Status">
                                <option value="@((int)BIDV.Config.StatusUser.NoneActive)">Chưa kích hoạt</option>
                                <option value="@((int)BIDV.Config.StatusUser.Active)">Kích hoạt</option>
                                <option value="@((int)BIDV.Config.StatusUser.Delete)">Đã xóa</option>
                            </select>
                            <script>
                                $("#Status").val(@Model.Status);
                            </script>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="UserName" class="col-sm-3 control-label">Loại người dùng</label>
                        <div class="col-sm-9">
                            <select class="form-control" id="UserType" name="UserType">
                                <option value="@((int)BIDV.Config.TypeUser.Normal)">Nomal</option>
                                <option value="@((int)BIDV.Config.TypeUser.Admin)">Admin</option>
                            </select>
                            <script>
                                $("#Status").val(@Model.Status);
                            </script>
                        </div>
                    </div>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary col-sm-offset-3">Cập nhật</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>