@{
    ViewBag.Title = "Sửa Tag";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model BIDV.Model.bidv__tags
@using (Html.BeginForm("Edit", "AdminTagManager", FormMethod.Post, new { id = "formqa" }))
{
    @Html.HiddenFor(g => g.id)
    <div class="row">
        <div class="col-md-12">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Sửa Tag</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <div class="form-horizontal">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="title_text" class="col-sm-2 control-label">Tên tag</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(g=>g.title, new {@readonly = "readonly", @class="form-control"})
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="title_text" class="col-sm-2 control-label">Nổi bật</label>
                            <div class="col-sm-10">
                                <select name="is_hot" id="is_hot" class="form-control">
                                    <option value="0">Bình thường</option>
                                    <option value="1">Nổi bật</option>
                                </select>
                                <script>
                                    $("#is_hot").val(@Model.is_hot);
                                </script>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="title_text" class="col-sm-2 control-label">Trạng thái</label>
                            <div class="col-sm-10">
                                <select name="status" id="status" class="form-control">
                                    <option value="0">Ẩn</option>
                                    <option value="1">Hiện</option>
                                    <option value="-1">Xóa</option>
                                </select>
                                <script>
                                    $("#status").val(@Model.status);
                                </script>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label"></label>
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary">Cập nhật</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row"></div>
}
