@{
    ViewBag.Title = "Quản lý hỏi đáp";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@using BIDV.Common
@using BIDV.Model
@using PagedList;
@using PagedList.Mvc;
@model IPagedList<BIDV.Model.bidv__faqs>
@{
    var lstCategory = (List<bidv__category>)ViewBag.ListCategory;
}
<div class="row">
    <div class="col-md-12">
        <div class="box box-danger">
            <div class="box-header with-border">
                <h3 class="box-title">Tìm kiếm</h3>
            </div>
            <div class="box-body">
                <div class="row">
                    @using (Html.BeginForm("Index", "AdminQa", FormMethod.Get))
                    {
                        @*<div class="col-xs-1">
                            <input name="id" type="text" id="id" value="0" class="form-control" placeholder="Nhập ID câu hỏi">
                        </div>*@
                        <div class="col-xs-4">
                            <input name="question" type="text" id="question" value="@ViewBag.question" class="form-control" placeholder="Nội dung câu hỏi">
                        </div>
                        <div class="col-xs-3">
                            <input name="answer" type="text" id="answer" value="@ViewBag.answer" class="form-control" placeholder="Nội dung câu trả lời">
                        </div>
                        <div class="col-xs-3">
                            <select id="category" name="category" class="form-control">
                                <option value="0">--Chọn danh mục--</option>
                                @{
                                    var lstParent = lstCategory.Where(g => g.parent_id == 0).OrderBy(g => g.weight).ToList();
                                    foreach (var parent in lstParent)
                                    {
                                        var lstChild = lstCategory.Where(g => g.parent_id == parent.id).OrderBy(g => g.weight).ToList();
                                        <option style="font-weight: bold" value="@parent.id">@parent.title</option>
                                        if (lstChild.Count > 0)
                                        {
                                            foreach (var child in lstChild)
                                            {
                                                <option value="@child.id">-- @child.title</option>
                                            }
                                        }
                                    }
                                }
                            </select>
                            <script>
                                $("#category").val(@ViewBag.category);
                            </script>
                        </div>
                        <div class="col-xs-2">
                            <button type="submit" class="btn btn-primary">Tìm kiếm</button>
                            <a href="/AdminQa/Add" class="btn btn-success">Thêm mới</a>
                        </div>
                    }
                </div>
            </div>
            <!-- /.box-body -->
        </div>
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Danh sách hỏi đáp</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body no-padding">
                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <th>ID</th>
                            <th>Nội dung</th>
                            <th style="width:150px;">Ngôn ngữ</th>
                            <th style="width:150px;">Ngày tạo</th>
                            <th style="width:150px;"></th>
                        </tr>
                        @foreach (var qa in Model)
                        {
                            <tr>
                                <td style="vertical-align: middle">@qa.id</td>
                                <td style="vertical-align: middle">
                                    <p><b>Câu hỏi:@qa.question</b></p>
                                    <p><b>Trả lời:</b><p><i>@(string.IsNullOrEmpty(qa.answer)? null: Html.Raw(qa.answer.Replace(Environment.NewLine, "<br/>")))</i></p></p>
                                </td>
                                <td style="vertical-align: middle">@qa.lang</td>
                                <td style="vertical-align: middle">@HelperDateTime.DateTimeToddMMyyyy(qa.created.Value)</td>
                                <td style="vertical-align: middle">
                                    <a href="/AdminQa/Edit/@qa.id" class="btn btn-warning btn-bordered" title="sửa">
                                        <i class="glyphicon glyphicon-pencil"></i>
                                    </a>
                                    <a onclick="confirm.BeforDelete('/AdminQa/Delete/@qa.id')" class="btn btn-danger btn-bordered" title="xóa">
                                        <i class="glyphicon glyphicon-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="bv_pagging">
                    @if (Model.PageCount > 1)
                    {
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, type_id = ViewBag.type_id, status = ViewBag.status }))
                    }
                </div>
            </div>
            <!-- /.box-body -->
        </div>
    </div>
</div>
<style>
    .table tbody tr td {
        vertical-align: middle;
    }
</style>