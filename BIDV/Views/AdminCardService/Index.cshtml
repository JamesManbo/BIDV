@using BIDV.Common
@using BIDV.Model
@{
    ViewBag.Title = "Thẻ ngân hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<BIDV.Model.bidv__card>
@{
    var lstCat = (List<bidv__category>)TempData["ListCategory"];
}
<div class="row">
    <div class="col-md-12">
        <div class="box box-danger">
            <div class="box-header with-border">
                <h3 class="box-title">Tìm kiếm</h3>
            </div>
            <div class="box-body">
                <div class="row">
                    @using (Html.BeginForm("Index", "AdminCardService", FormMethod.Get))
                    {
                        <div class="col-xs-4">
                            @Html.DropDownList("type_id", new SelectList(lstCat, "id", "title"), "--Chọn thẻ--", new { @class = "form-control", onchange = "card.onLoadGroupCard($(this).val())" })
                        </div>
                        <div class="col-xs-4">
                            <select class="form-control" id="status" name="status">
                                <option value="0">--Trạng thái--</option>
                                <option value="1">Bình thường</option>
                                <option value="-1">Đã xóa</option>
                            </select>
                            <script>

                                $("#status").val(@ViewBag.status);
                            </script>
                        </div>
                        <div class="col-xs-4">
                            <button type="submit" class="btn btn-primary">Tìm kiếm</button>
                            <a href="/AdminCardService/Add" class="btn btn-success">Thêm mới</a>
                        </div>
                    }
                </div>
            </div>
            <!-- /.box-body -->
        </div>
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Danh sách thẻ</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body no-padding">
                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <th>Sắp xếp</th>
                            <th>Tên thẻ</th>
                            <th>Ảnh</th>
                            <th></th>
                        </tr>
                        @foreach (var card in Model)
                        {
                            <tr>
                                <td style="vertical-align: middle">@card.weight</td>
                                <td style="vertical-align: middle">@card.title</td>
                                <td style="vertical-align: middle">
                                    <img width="100" height="63" src="/Content/FrontEnd/_img_server/card/@HelperDateTime.DateTimeToyyyymmdd(@card.created.Value)/size280/@card.image" />
                                </td>
                                <td style="vertical-align: middle">
                                    @if (card.status != -1)
                                    {
                                        <a href="/AdminCardService/Edit/@card.id" class="btn btn-warning btn-bordered" title="sửa">
                                        <i class="glyphicon glyphicon-pencil"></i>
                                    </a>
                                        <a onclick="confirm.BeforDelete('/AdminCardService/Delete/@card.id')" class="btn btn-danger btn-bordered" title="xóa">
                                            <i class="glyphicon glyphicon-trash"></i>
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="bv_pagging">
                    @if (Model.PageCount > 1)
                    {
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, type_id = ViewBag.type_id, status = ViewBag.status }))
                    }
                </div>
            </div>
            <!-- /.box-body -->
        </div>
    </div>
</div>
