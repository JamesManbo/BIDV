@{
    ViewBag.Title = "Danh sách tin tức";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using BIDV.Common
@using BIDV.Model
@using PagedList;
@using PagedList.Mvc;
@model IPagedList<BIDV.Model.bidv__news>
<div class="row">
    <div class="col-md-12">
        <div class="box box-danger">
            <div class="box-header with-border">
                <h3 class="box-title">Tìm kiếm</h3>
            </div>
            <div class="box-body">
                <div class="row">
                    @using (Html.BeginForm("Index", "AdminNews", FormMethod.Get))
                    {
                        <div class="col-xs-2">
                            Tiêu đề: <input name="title" type="text" id="title" value="@ViewBag.TieuDe" class="form-control" placeholder="Tiêu đề">
                        </div>
                        <div class="col-xs-2">
                            Trạng thái:
                            <select name="status" id="status" class="form-control">
                                <option value="-2">-- Không chọn --</option>
                                <option value="0">Đang ẩn</option>
                                <option value="1">Đang xuất bản</option>
                                <option value="-1">Đã xóa</option>
                            </select>
                            <script>
                                $("#status").val(@ViewBag.status);
                            </script>
                        </div>
                        <div class="col-xs-2">
                            Danh mục gốc:
                            <select class="form-control" name="cat_id" id="cat_id">
                                @{
                                    var lstCats = (List<bidv__category>)ViewBag.ListCategory;
                                    <option value="">--Chọn danh mục--</option>
                                    foreach (var bidvCategory in lstCats)
                                    {
                                        <option value="@bidvCategory.id">@bidvCategory.title</option>
                                    }
                                }
                            </select>
                            <script>
                                $("#cat_id").val(@ViewBag.cat_id);
                            </script>
                        </div>
                        <div class="col-xs-2">
                            Từ ngày:
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input type="text" name="fromdate" class="form-control pull-right" id="fromdate" value="@(ViewBag.fromdate == null?"":string.Format("{0:MM/dd/yyyy}", (DateTime)ViewBag.fromdate))">
                            </div>
                        </div>
                        <div class="col-xs-2">
                            Tới ngày:
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input type="text" class="form-control pull-right" name="todate" id="todate" value="@(ViewBag.todate == null ? "" : string.Format("{0:MM/dd/yyyy}", (DateTime)ViewBag.todate))">
                            </div>
                        </div>
                        <div class="col-xs-2" style="margin-top: 20px;">
                            <button type="submit" class="btn btn-primary">Tìm kiếm</button>
                        </div>
                    }
                </div>
            </div>
            <!-- /.box-body -->
        </div>
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Danh sách bài viết</h3>
                <a href="/AdminNews/Add" class="btn btn-primary pull-right">Thêm mới</a>
            </div>
            <!-- /.box-header -->
            <div class="box-body no-padding">
                <table class="table table-striped">
                    <tbody>
                        @{int i = 1;}
                        <tr>
                            <th>Tiêu đề</th>
                            <th>Danh mục</th>
                            <th>Ảnh</th>
                            <th>Thời gian xuất bản</th>
                            <th>Thời gian tạo</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="vertical-align: middle">
                                    <div class="row">
                                        <div class="col-xs-12">
                                            <a href="/News/Detail/@item.id">@Html.DisplayFor(modelItem => item.title)</a>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-12">
                                            <span style="font-weight: bold;">Lượt xem:</span> @(item.view?? 0)
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-12">
                                            @{
                                                var taglist = item.bidv__tag_items.Where(a => a.item_id == item.id && a.bidv__tags.status ==1).ToList();
                                                if (taglist.Count > 0)
                                                {
                                                    foreach (var tag in taglist)
                                                    {
                                                        <a href="/News/FindTag?tagName=@(tag.bidv__tags.tag)">#@(tag.bidv__tags.title)</a><a href="/AdminNews/DeleteTag/@tag.id"><i class="fa fa-close"></i></a>
                                                    }
                                                }
}
                                            <a href="#" title="Gán tag" id="addTag-@(i-1)" data-toggle="modal" data-target="#addTagModal">
                                                <i class="fa fa-tag"></i>
                                            </a>
                                            <script>
                                                $('#addTag-@(i-1)').click(function () {
                                                    $('#addTagModal').show();
                                                    $("#newsId").val(@item.id);
                                                });
                                            </script>
                                        </div>
                                    </div>

                                </td>
                                <td style="vertical-align: middle">@item.bidv__category.title</td>
                                <td style="vertical-align: middle">
                                    @{
                                        var objNewsImages = item.bidv__news_image.OrderByDescending(g => g.created).FirstOrDefault();
                                        if (objNewsImages != null)
                                        {
                                            <img id="view-card" style="margin-top: 10px;" src="/Content/FrontEnd/_img_server/news/@if (objNewsImages.created != null)
                                                                                                                                  {
                                                                                                                                      @HelperDateTime.DateTimeToyyyymmdd(objNewsImages.created.Value)
                                                                                                                                  }/size306/@objNewsImages.image" alt="" width="100" />
                                        }
                                    }
                                </td>
                                <td style="vertical-align: middle">@(item.dateof != null ? HelperDateTime.DateTimeToddMMyyyy(item.dateof.Value) : "")</td>
                                <td style="vertical-align: middle">@HelperDateTime.TimeSpan2DateTime(item.created)</td>
                                <td style="vertical-align: middle">
                                    <div id="btnStatus_@item.id">
                                        @Html.Raw(item.status == 0 ? "<span style='color:#2b6893;cursor: pointer;' onclick='UpdateStatus(" + @item.id + ")'>Ẩn</span>" : "<span style='color:red;cursor: pointer;' onclick='UpdateStatus(" + @item.id + ")'>Hiện</span>")
                                    </div>
                                </td>
                                <td style="vertical-align: middle">
                                    <a href="/AdminNews/Edit/@item.id" class="btn btn-warning btn-bordered" title="sửa">
                                        <i class="glyphicon glyphicon-pencil"></i>
                                    </a>
                                    <a onclick="confirm.BeforDelete('/AdminNews/Delete/@item.id')" class="btn btn-danger btn-bordered" title="xóa">
                                        <i class="glyphicon glyphicon-trash"></i>
                                    </a>
                                </td>
                            </tr>
                            i++;
                        }
                    </tbody>
                </table>
                <div class="bv_pagging">
                    @if (Model.PageCount > 1)
                    {
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, title = ViewBag.TieuDe, status = ViewBag.status, cat_id = ViewBag.cat_id, fromdate = ViewBag.fromdate, todate = ViewBag.todate }))
                    }
                </div>
            </div>
            <!-- /.box-body -->
        </div>
    </div>
</div>
<div class="modal" role="dialog" id="addTagModal" style="background:transparent !important;">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm("AddTagName", "AdminNews", FormMethod.Post, new { enctype = "multipart/form-data",id="addTagModalForm" }))
            {
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">x</span>
                    </button>
                    <h4 class="modal-title">Thêm tag</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-xs-3">
                            <input type="hidden" id="newsId" name="newsId" />
                            <label>Từ khóa</label>
                        </div>
                        <div class="col-xs-9">
                            <input type="text" name="tagName" id="txtTagName" class="form-control" />
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <div class="row">
                        <div class="col-sm-12">
                            <button id="btnAccept" class="btn btn-primary">Đồng ý</button>
                            <button id="btnCancel"  class="btn btn-default pull-right" data-dismiss="modal">Hủy bỏ</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<script src="/AppJs/modal.js"></script>
<script>
    $(document).ready(function () {
        $('#fromdate').datepicker({
            autoclose: true
        });
        $('#todate').datepicker({
            autoclose: true
        });
        modalForm.validateForm();
        $("#btnCancel").click(function () {
            $('label[class=error]').hide();
        });
        $("#addTagModal").draggable({
            handle: ".modal-header"
        });
    });

    function UpdateStatus(id) {
        $.get("/AdminNews/UpdateStatus/" + id, function (res) {
            debugger;
            if (res == 1) {
                $("#btnStatus_" + id).html("<span style='color:red;cursor: pointer;' onclick='UpdateStatus(" + id + ")'>Hiện</span>");
            } else if (res == 0) {
                $("#btnStatus_" + id).html("<span style='color:#2b6893;cursor: pointer;' onclick='UpdateStatus(" + id + ")'>Ẩn</span>");
            }
        });
    }
</script>
<style>
    .table tbody tr td {
        vertical-align: middle;
    }
</style>