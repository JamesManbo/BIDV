@{
    ViewBag.Title = "EditNewsPromotion";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<script src="/AppJs/card.js"></script>
<script src="/Content/BackEnd/plugins/ckeditor/ckeditor.js"></script>
<script src="/Content/BackEnd/plugins/ckfinder/ckfinder.js"></script>
<script src="/Content/BackEnd/plugins/ckeditor/config.js"></script>
<script src="/AppJs/newspromotion.js"></script>
@using BIDV.Common
@model BIDV.Model.bidv__news
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm("Edit", "AdminNewsPromotion", FormMethod.Post, new { enctype = "multipart/form-data", id = "formnewspromotion" }))
        {
            @Html.HiddenFor(g => g.id)
            @Html.HiddenFor(g => g.created)
            @Html.HiddenFor(g => g.uid)
            @Html.HiddenFor(g => g.user_name)
            @Html.HiddenFor(g => g.sort)
            @Html.HiddenFor(g => g.view)
            @Html.HiddenFor(g => g.type)
            <div class="form-group-sm">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Thông tin cơ bản</h3>
                    </div>
                    <div class="box-body">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-2">
                                    <label for="title" class="control-label">Tiêu đề</label>

                                </div>
                                <div class="col-sm-10">
                                    <input type="text" name="title" value="@Model.title" class="form-control" id="txtTitle" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-2">
                                    <label class="control-label">Ngày xuất bản</label>

                                </div>
                                <div class="col-xs-4">
                                    @if (Model.dateof != null)
                                    {
                                        var dtTimeFrom = HelperDateTime.ConvertTimespan2DateTime((int)Model.dateof);

                                        @Html.TextBoxFor(g => g.dateof, new { @class = "form-control  pull-right", Value = @dtTimeFrom.Date.ToString("MM/dd/yyyy"), id = "dateof" })
                                    }
                                    else
                                    {

                                        @Html.TextBoxFor(g => g.dateof, new { @class = "form-control pull-right" })
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-2">
                                    <label class="control-label">Bắt đầu</label>

                                </div>
                                <div class="col-xs-4">
                                    @if (Model.time_from != null)
                                    {
                                        var dtTimeFrom = HelperDateTime.ConvertTimespan2DateTime((int)Model.time_from);

                                        @Html.TextBoxFor(g => g.time_from, new { @class = "form-control  pull-right", Value = @dtTimeFrom.Date.ToString("MM/dd/yyyy"), id = "time_from" })
                                    }
                                    else
                                    {

                                        @Html.TextBoxFor(g => g.time_from, new { @class = "form-control pull-right" })
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-2">
                                    <label class="control-label">Kết thúc</label>

                                </div>
                                <div class="col-xs-4">
                                    @if (Model.time_to != null)
                                    {
                                        var dtTimeTo = HelperDateTime.ConvertTimespan2DateTime((int)Model.time_to);

                                        @Html.TextBoxFor(g => g.time_to, new { @class = "form-control  pull-right", Value = @dtTimeTo.Date.ToString("MM/dd/yyyy"), id = "time_to" })
                                    }
                                    else
                                    {

                                        @Html.TextBoxFor(g => g.time_to, new { @class = "form-control pull-right" })
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-2">
                                    <label class="control-label">Danh mục</label>

                                </div>
                                <div class="col-xs-4">
                                    <select class=" form-control select2-dropdown width-full" name="cat_id" id="cat_id">
                                        @{
            var listCats = (List<BIDV.Model.bidv__category>)ViewBag.ListCategory;
                                        }
                                        <option value="">--Chọn danh mục--</option>
                                        @foreach (var item in listCats)
                                        {
                                            <option value="@item.id">@item.title</option>
                                        }
                                    </select>

                                    <script>
                                        $("#cat_id").val(@Model.cat_id);
                                    </script>

                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-2">
                                    <label class="control-label">Trạng thái</label>
                                </div>
                                <div class="col-sm-10">
                                    <div class="row">
                                        <div class="col-xs-1">
                                            <input type="radio" name="status" value="0"> Ẩn
                                        </div>
                                        <div class="col-xs-1">
                                            <input type="radio" name="status" value="1"> Hiện
                                        </div>
                                    </div>
                                    <script>
                                        $("input[name=status][value=" +@Model.status + "]").prop('checked', true);
                                      
                                    </script>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-2">
                                    <label class="control-label">Hiển thị ở trang chủ</label>

                                </div>
                                <div class="col-xs-4">
                                        <input type="checkbox" value="1" name="is_home" @(Model.is_home == 1 ? "checked" : "") />

                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-2">
                                    <label class="control-label">Tin nổi bật</label>

                                </div>
                                <div class="col-xs-4">
                                        <input type="checkbox" value="1" name="is_hot" @(Model.is_hot == 1 ? "checked" : "") />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class=" box box-primary">
                    <div class=" box-header with-border">
                        <h3 class="box-title">File đính kèm</h3>
                    </div>
                    <div class="box-body">
                        <div class="row">
                            <div class="col-sm-12">
                                @Html.Partial("_Attachment", new { id = "id", object_type = "news", object_id = @Model.id })
                            </div>
                        </div>
                    </div>
                </div>

                <div class=" box box-primary">
                    <div class=" box-header with-border">
                        <h3 class="box-title">Hình ảnh</h3>
                    </div>
                    <div class="box-body">
                        <div class="form-group">

                            <div class="row">
                                <div class="col-xs-2">
                                </div>
                                <div class="col-xs-4">
                                    <div class="input-group">
                                        <div class="col-sm-10">
                                            <input type="file" id="file-card" name="file" style="display: none">
                                            <button type="button" style="margin-right: 89%" onclick="$('#file-card').click();" class="btn btn-default"><i class="glyphicon glyphicon-folder-open"></i>&nbsp;&nbsp;Chọn File</button>
                                            @{
                                        var objNewsImages = Model.bidv__news_image.OrderByDescending(g => g.created).FirstOrDefault();
                                        if (objNewsImages != null)
                                        {
                                            <img id="view-card" style="margin-top: 10px;" src="/Content/FrontEnd/_img_server/news/@if (objNewsImages.created != null)
                                                                                                                          {
                                                                                                                              @HelperDateTime.DateTimeToyyyymmdd(objNewsImages.created.Value)
                                                                                                                          }/size306/@objNewsImages.image" alt="" width="100" />
                                        }
                                            }

                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class=" box box-primary">
                    <div class=" box-header with-border">
                        <h3 class="box-title">Nội dung</h3>
                    </div>
                    <div class="box-body">
                        <div class="form-group">

                            <div class="row">
                                <div class="col-xs-2">
                                    <label class="control-label">Mô tả ngắn </label>
                                </div>
                                <div class="col-sm-10">
                                    <div class="form-group">                                        
                                        <textarea rows="5" class="form-control" name="sort_body">@Html.Raw(HttpUtility.HtmlDecode(Model.sort_body))</textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-2">
                                    <label class="control-label">Mô tả </label>
                                </div>
                                <div class="col-sm-10">
                                    <div class="form-group">                                        
                                        <textarea rows="5" class="form-control" name="body">@Html.Raw(HttpUtility.HtmlDecode(Model.body))</textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-2">
                                    <label class="control-label">Thêm ảnh vào bài viết </label>
                                </div>
                                <div class="col-xs-4">
                                    <div class="input-group">
                                        <input type="file" id="files" name="files" multiple="" style="display: none">
                                        <button type="button" onclick="$('#files').click();" class="btn btn-default"><i class="glyphicon glyphicon-folder-open"></i>&nbsp;&nbsp;Chọn File</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group-sm">
                <div class="row">
                    <div class="col-xs-1">
                        <button type="submit" class="btn btn-success">Lưu thay đổi</button>
                    </div>
                    <div class="col-xs-1">
                        <a href="/AdminNewsPromotion/Index" class="btn btn-danger">Hủy bỏ</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<script>
    $(document).ready(function () {
        //Date picker
        $('#dateof').datepicker({
            autoclose: true
        });
        $('#time_from').datepicker({
            autoclose: true
        });
        $('#time_to').datepicker({
            autoclose: true
        });
        CKEDITOR.replace("body", {
            language: 'vi',
            filebrowserBrowseUrl: "/Content/BackEnd/plugins/ckfinder/ckfinder.html",
            filebrowserImageBrowseUrl: '/Content/BackEnd/plugins/ckfinder/ckfinder.html?Type=Images',
            filebrowserFlashBrowseUrl: '/Content/BackEnd/plugins/ckfinder/ckfinder.html?Type=Flash',
            height: 350
        });
        $("#files").on('change', function () {
            // Checking whether FormData is available in browser
            if (window.FormData !== undefined) {
                var fileUpload = $(this).get(0);
                var files = fileUpload.files;
                // Create FormData object
                var fileData = new FormData();
                // Looping over all files and add it to FormData object
                for (var i = 0; i < files.length; i++) {
                    fileData.append(files[i].name, files[i]);
                }
                // Adding one more key to FormData object
                fileData.append('username', 'Manas');
                $.ajax({
                    url: '/Upload/UploadFiles?folder=news',
                    type: "POST",
                    contentType: false, // Not to set any content header
                    processData: false, // Not to process data
                    data: fileData,
                    success: function (result) {
                        console.log(result);
                        $(this).val('');
                        for (var i = 0; i < result.files.length; i++) {
                            CKEDITOR.instances['body'].insertHtml('<img src="' + result.files[i] + '">');
                        }
                    },
                    error: function (err) {
                        alert(err.statusText);
                    }
                });
            } else {
                alert("FormData is not supported.");
            }
        });
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#view-card').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
        $("#file-card").change(function () {
            readURL(this);
        });
        newspromotion.validateForm();
        $('input[name=status]:checked').val();
    });

</script>