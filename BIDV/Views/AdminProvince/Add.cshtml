@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model BIDV.Model.bidv___province
<script src="/AppJs/province.js"></script>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm("Add", "AdminProvince", FormMethod.Post, new { id = "formprovince" }))
        {
            <div class="form-group-sm">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Thuộc tính</h3>
                    </div>
                    <div class="box-body">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-2">
                                    <label for="title" class="control-label">Tên tỉnh thành</label>
                                </div>
                                <div class="col-xs-4">
                                    <input type="text" name="title" class="form-control" id="txtTitle" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-2">
                                    <label for="address" class="control-label">Địa chỉ</label>
                                </div>
                                <div class="col-xs-4">
                                    <input type="text" name="address" class="form-control" id="txtTitle" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-2">
                                    <label for="status" class="control-label">Trạng thái</label>

                                </div>
                                <div class="col-xs-4">
                                    <select name="status" id="status" class="form-control select2-dropdown">
                                        <option value="">-- Chọn trạng thái --</option>
                                        <option value="0">Bình thường</option>
                                        <option value="1">Kích hoạt vùng miền</option>
                                       
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-2">
                                    <label for="is_city" class="control-label">Phân loại</label>

                                </div>
                                <div class="col-xs-4">
                                    <select name="is_city" id="is_city" class="form-control select2-dropdown">
                                        <option value="">-- Chọn cáp --</option>
                                        <option value="0">Cấp tỉnh</option>
                                        <option value="1">Cấp thành phố</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-2">
                                    <label for="position" class="control-label">Sắp xếp</label>

                                </div>
                                <div class="col-xs-4">
                                    <input type="number" name="position" id="position" class="form-control " />
                                    <label class="text-red text-sm text-info">Theo thứ tự từ nhỏ đến lớn</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group-sm">
                <div class="row">
                    <div class="col-xs-1">
                        <button type="submit" class="btn btn-default btn-success">Lưu thay đổi</button>
                    </div>
                    <div class="col-xs-1">
                        <a href="/AdminProvince" class="btn btn-default btn-danger">Hủy bỏ</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<script>
    $(document).ready(function () {

        province.validateForm();
    });
</script>
